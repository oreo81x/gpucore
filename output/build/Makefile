# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  gpucore_config = debug
  sandbox_config = debug
endif
ifeq ($(config),release)
  gpucore_config = release
  sandbox_config = release
endif

PROJECTS := gpucore sandbox

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

gpucore:
ifneq (,$(gpucore_config))
	@echo "==== Building gpucore ($(gpucore_config)) ===="
	@${MAKE} --no-print-directory -C . -f gpucore.make config=$(gpucore_config)
endif

sandbox: gpucore
ifneq (,$(sandbox_config))
	@echo "==== Building sandbox ($(sandbox_config)) ===="
	@${MAKE} --no-print-directory -C . -f sandbox.make config=$(sandbox_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f gpucore.make clean
	@${MAKE} --no-print-directory -C . -f sandbox.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   gpucore"
	@echo "   sandbox"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"